{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-debugger": [
            "warn"
        ],
        "no-extra-boolean-cast": [
            "error"
        ],
        "no-mixed-spaces-and-tabs": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 1
            }
        ],
        "no-redeclare": [
            "warn"
        ],
        "no-return-assign": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ]
    },
    "globals": {
        "paystubConfig": true
    }
}